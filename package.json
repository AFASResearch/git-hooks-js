{
  "name": "git-hooks",
  "description": "A tool to manage project Git hooks",
  "author": "Alexander Tarmolov <tarmolov@gmail.com>",
  "version": "1.0.0-rc.1",
  "repository": "https://github.com/tarmolov/git-hooks-js",
  "bin": {
    "git-hooks": "./bin/git-hooks"
  },
  "scripts": {
    "postinstall": "git-hooks --install",
    "preuninstall": "git-hooks --uninstall",
    "test": "jscs . && jshint . && mocha --reporter spec --recursive tests"
  },
  "main": "lib/git-hooks",
  "dependencies": {
    "commander": "^2.8.1",
    "vow": "~0.4.10",
    "vow-fs": "~0.3.4"
  },
  "devDependencies": {
    "chai": "^2.3.0",
    "jscs": "^1.13.1",
    "jshint": "^2.8.0",
    "mocha": "^2.2.5"
  },
  "gitHooks": {
    "dirs": {
      "root": ".git",
      "hooks": "hooks",
      "hooksOld": "hooks.old"
    },
    "hooks": [
      "applypatch-msg",
      "commit-msg",
      "post-applypatch",
      "post-checkout",
      "post-commit",
      "post-merge",
      "post-receive",
      "pre-applypatch",
      "pre-auto-gc",
      "pre-commit",
      "pre-push",
      "pre-rebase",
      "pre-receive",
      "prepare-commit-msg",
      "update"
    ],
    "template": [
      "#!/usr/bin/env node",
      "try {",
      "   require('git-hooks').run(__filename, process.argv[2]).fail(function () {",
      "       process.exit(-1);",
      "   });",
      "} catch (e) {",
      "   console.log('Cannot find git-hooks. Did you install it?');",
      "}"
    ]
  }
}
